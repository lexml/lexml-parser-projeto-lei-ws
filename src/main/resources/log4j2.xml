<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
	<Filters>
		<RegexFilter regex=".*Componente com versão fora da especificação.*" onMatch="DENY" onMismatch="NEUTRAL"/>
	</Filters>	
	<Appenders>
		<Console name="ConsoleOut" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />		
		</Console>
		<Console name="ConsoleErr" target="SYSTEM_ERR">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />				
		</Console>
		<Prometheus name="METRICS"/>
	</Appenders>
	<Loggers>
		<Logger name="br.gov.lexml.parser.pl" level="INFO" additivity="false">
			<AppenderRef ref="METRICS"/>
            <AppenderRef ref="ConsoleErr"/>            	
		</Logger> 
		<Logger name="br.gov.lexml.schema.validator.Validador$MyLSResourceResolver" level="OFF"/>		
		<Root level="info">
            <AppenderRef ref="METRICS"/>
            <AppenderRef ref="ConsoleErr">
            	<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </AppenderRef>
        </Root>
	</Loggers>
</Configuration>